def task4():
    print('Введите стоимость в рублях')
    r = int(input())
    print('Введите стоимость в копейках')
    k = int(input())
    print('Введите кол-во мячей')
    n = int(input())

    sum = ((k * n)  / 100)  + (r * n)
    r = floor(sum)
    k = int(sum % r * 100)

    print('За', n, 'мяча нужно заплатить', r, 'рублей и', k, 'копеек')
task4()
