def task3():
    print('Введите одно целое трехзначное положительное число')
    num = int(input())
    num1 = num % 10
    num2 = num // 100
    num3 = num // 10 % 10

    print('Сумма цифр числа', num, 'равна', num1 + num2 + num3)
    print('Произведение цифр числа', num, 'равно', num1 * num2 * num3)
task3()
